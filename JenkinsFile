pipeline {
    agent any

    environment {
        GIT_REPO_URL = 'https://github.com/CYBERCODERoss/googlesearch.git'
        BASH_SCRIPT_PATH = 'search_google.sh'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: 'main', url: GIT_REPO_URL
                }
            }
        }

        stage('Run Bash Script') {
            steps {
                script {
                    def result = sh(script: "bash ${BASH_SCRIPT_PATH}", returnStatus: true)

                    if (result == 0) {
                        echo "Bash script executed successfully."
                    } else {
                        error "Bash script failed with exit code ${result}."
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                deleteDir()
            }
        }
    }
}
