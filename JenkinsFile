pipeline {
    agent any

    environment {
        GIT_REPO_URL = 'https://github.com/ CYBERCODERoss/googlesearch.git'
        BASH_SCRIPT_PATH = 'search_google.sh'
        EMAIL_RECIPIENT = 'talhatfaheem.com'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: 'main', url: GIT_REPO_URL
                }
            }
        }

        stage('Give Execute Permission') {
            steps {
                script {
                    sh "chmod +x ${BASH_SCRIPT_PATH}"
                }
            }
        }

        stage('Run Bash Script') {
            steps {
                script {
                    sh "bash ${BASH_SCRIPT_PATH}"
                }
            }
        }

        stage('Send Email') {
            steps {
                script {
                    emailext body: 'PASSED PIPELINE PROJECT', subject: 'report', to: 'talhatfaheem@gmail.com'
                }
            }
        }

    post {
        always {
            script {
                deleteDir()
            }
        }
    }
}
